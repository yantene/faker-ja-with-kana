{
  "name": "faker-ja-with-kana",
  "version": "1.0.0",
  "description": "Japanese name extension for Faker.js with kanji, kana, and hepburn romanization",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest",
    "dev": "tsc --watch",
    "start": "tsx src/index.ts",
    "lint": "biome check .",
    "fix": "biome check --write --unsafe ."
  },
  "keywords": [
    "faker",
    "japanese",
    "names",
    "kana",
    "kanji",
    "hepburn"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^8.0.0",
    "hepburn": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "data"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yantene/faker-ja-with-kana.git"
  }
}
